{
    "name" : "Socialbase blocker",
    "version": "1.0",
    "description": "Socialbase blocker",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "96": "icon96.png",
        "128": "icon128.png"
    },
    "permissions": ["storage", "activeTab", "tabs", "http://*/*", "https://*/*"],
    "content_scripts": [
        {
            "matches": ["https://senior.socialbase.com.br/*"],
            "all_frames": true,
            "js": ["./blocker.js"]
        }
    ],
    "background": {
        "scripts": ["blocker.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "SocialBase Blocker",
        "default_popup": "options.html",
        "browser_style": true,
        "default_icon": {
            "128": "icon128.png"
        }
    },
    "manifest_version": 2
}