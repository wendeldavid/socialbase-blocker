{
    "name" : "Socialbase blocker",
    "version": "1.0",
    "description": "Socialbase blocker",
    "manifest_version": 2,
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["storage", "tabs", "http://*/*", "https://*/*", "webRequest", "webRequestBlocking", "contextMenus"],
    "content_scripts": [
        {
            "matches": ["https://senior.socialbase.com.br/*"],
            "run_at" : "document_end",
            "all_frames": true,
            "js": ["blocker.js"]
        }
    ],
    "background": {
        "scripts": ["blocker.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com https://cdnjs.cloudflare.com; object-src 'self'"
}
